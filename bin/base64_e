#!/usr/bin/env ruby

require_relative '../lib'

encode_op = Operator2.new(name: 'base64_e', pipeline: ['base64', "ruby -e 'print $stdin.binmode.read.chomp(\"\n\")'"])
decode_op = Operator2.new(name: 'base64_d', pipeline: ['base64 -d'])

Cmds::Generic.exec2(
  fwd_op: encode_op,
  fwd_args: {},
  input_stream: $stdin.binmode,
  inv_op: decode_op,
  inv_args: {}
)
